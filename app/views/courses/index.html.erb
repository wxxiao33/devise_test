<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <%# only show code name and subjects for a course %>
      <th>Code</th>
      <th>Name</th>
      <th>Subjects</th>
      <%# <th>Description</th> %>
      <%# <th>Independent study</th>
      <th>Requirements</th> %>
      <%# <th>Credits</th>
      <th>Course</th>
      <th>Term</th>
      <th>Continuity</th>
      <th>Comment</th> %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td><%= course.name %></td>
        <td><%= course.subjects_info %></td>
        <% if false %>
        <td><%= course.description %></td>
        <td><%= course.independent_study %></td>
        <td><%= course.requirements %></td>
        <td><%= course.credits %></td>
        <td><%= course.code %></td>
        <td><%= course.name %></td>
        <td><%= course.term %></td>
        <td><%= course.continuity_id %></td>
        <td><%= course.comment %></td>
        <% end %>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

