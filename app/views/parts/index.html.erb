<p id="notice"><%= notice %></p>

<h1>Parts</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Course</th>
        <th>Subject</th>
        <th>Segment</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td><%= part.course_id %></td>
          <td><%= part.subject_id %></td>
          <td><%= part.segment %></td>
          <td><%= part.name %></td>
          <td><%= link_to 'Show', part %></td>
          <td><%= link_to 'Edit', edit_part_path(part) %></td>
          <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

<br>

